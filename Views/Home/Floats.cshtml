@model IEnumerable<ThrowdownAttire.Models.Shirt>

<div id="floats">
    @for (int i = 0; i < Model.Count(); i += 4)
            {
        <div class="row">
            @for (int j = i; j < Model.Count() && j < i + 4; j++)
            {
                <div class="col-md-3 shirtContainer">
                    <a class="modal-link" href="~/Home/Shirt/@Model.ElementAt(j).Id">
                        <div class="shirtModal modal-dialog" data-type="@Model.ElementAt(j).Type.ToString().ToLower()">
                            <div class="modal-content">
                                <div class="modal-header">
                                    @if (Model.ElementAt(j).Title.Length > 18)
                                    {
                                        <h2 class="modal-title">@Model.ElementAt(j).Title.Substring(0, 16)...</h2>
                                    }
                                    else
                                    {
                                        <h2 class="modal-title">@Model.ElementAt(j).Title</h2>
                                    }
                                </div>
                                <!-- dialog body -->
                                <div class="modal-body">
                                    @if (@Model.ElementAt(j).Photos.Length > 0)
                                    {
                                        <img class="modal-pic" alt="@Model.ElementAt(j).Handle" src="@Model.ElementAt(j).Photos[0]" />
                                    }
                                    else
                                    {
                                        <img class="modal-pic" alt="@Model.ElementAt(j).Handle" src="null" />
                                    }
                                </div>
                                <!-- dialog buttons -->
                                <div class="modal-footer">
                                    @Model.ElementAt(j).Description
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>
@Scripts.Render("~/bundles/floats")
