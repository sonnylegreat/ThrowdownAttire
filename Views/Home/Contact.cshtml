@{ 
    ViewBag.Title = "Contact";
}
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h2>Contact</h2>
        <div class="inf-box">
            <p>Before sending an enequiry please refer to the <strong><a href="~/Home/FAQ">FAQ</a></strong> page.</p>
            <p>You can email us directly at <strong>throwdownattire@gmail.com</strong> or message our <strong><a href="https://www.facebook.com/throwdownattire/?fref=ts">Facebook page</a></strong>.</p>
        </div>
        <form id="contactform" action="~/Home/Contact" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" id="name" placeholder="Skurt Reynolds">
            </div>
            <div class="form-group">
                <label for="useremail">Email Address</label>
                <input type="email" name="useremail" class="form-control" id="useremail" placeholder="e.g. some.cunt@nunyah.com">
            </div>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" class="form-control" id="title" placeholder="Title">
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea name="message" rows="3" class="form-control" id="message" placeholder="Message"></textarea>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>
